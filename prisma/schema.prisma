generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email     String   @unique
  auth_provider AuthProvider[]
  clerk_customer_id String @unique
  name      String?
  stripe_customer_id String?
  phone_number String?
  avatar_url String?

  wishlist   Wishlist[]
  orders     OrderDetails[]
  payments   PaymentDetails[]
}

model Category {
  id          Int      @id @default(autoincrement())
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  name        String   @unique
  description String?

  products    Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  name        String
  photo_url   String?
  description String?
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int

  skus        ProductsSkus[]
  wishlist    Wishlist[]
}

model ProductsSkus {
  id        Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  updated_at DateTime @updatedAt
  size_attribute String
  color_attribute String
  sku       String   @unique
  price     Float

  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  orderItems OrderItems[]
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user      User     @relation(fields: [userClerkId], references: [clerk_customer_id])
  userClerkId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  @@unique([userClerkId, productId])
}

model PaymentDetails {
  id            Int      @id @default(autoincrement())
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  user          User     @relation(fields: [userClerkId], references: [clerk_customer_id])
  userClerkId        String
  stripe_payment_id String @unique
  provider      String
  status        PaymentStatus
  amount        Float

  orders        OrderDetails[]

  @@index([stripe_payment_id])
  @@index([created_at])
}


model OrderDetails {
  id            Int      @id @default(autoincrement())
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  user          User     @relation(fields: [userClerkId], references: [clerk_customer_id])
  userClerkId        String
  total_amount  Float
  status        OrderStatus

  payment       PaymentDetails @relation(fields: [paymentId], references: [id])
  paymentId     Int

  items         OrderItems[]
}

model OrderItems {
  id            Int      @id @default(autoincrement())
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  order         OrderDetails @relation(fields: [orderId], references: [id])
  orderId       Int

  product_sku   ProductsSkus @relation(fields: [productSkuId], references: [id])
  productSkuId  Int

  quantity      Int
  price         Float
}

enum AuthProvider {
  GOOGLE
  EMAIL
}


enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  COMPLETED
  CANCELLED
}


